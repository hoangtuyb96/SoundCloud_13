<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@+id/guideline_play"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_play2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline_play3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />


    <android.support.constraint.Guideline
        android:id="@+id/guideline_play4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_25"
        app:layout_constraintBottom_toTopOf="@+id/guideline_play4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_play3" />

    <TextView
        android:id="@+id/text_view_title_play"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="@dimen/sp_25"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/text_view_artist_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_play" />

    <TextView
        android:id="@+id/text_view_artist_play"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/colorArtistPlay"
        android:textSize="@dimen/sp_20"
        app:layout_constraintBottom_toTopOf="@+id/guideline_play2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title_play" />

    <ImageView
        android:id="@+id/image_view_previous"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginBottom="8dp"
        android:rotation="180"
        android:src="@drawable/next_track"
        app:layout_constraintBottom_toTopOf="@+id/guideline_play3"
        app:layout_constraintEnd_toStartOf="@+id/image_view_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_play2" />

    <ImageView
        android:id="@+id/image_view_state"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginBottom="8dp"
        android:src="@drawable/play_button"
        app:layout_constraintBottom_toTopOf="@+id/guideline_play3"
        app:layout_constraintEnd_toStartOf="@+id/image_view_next"
        app:layout_constraintStart_toEndOf="@+id/image_view_previous"
        app:layout_constraintTop_toTopOf="@+id/guideline_play2" />

    <ImageView
        android:id="@+id/image_view_next"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginBottom="8dp"
        android:src="@drawable/next_track"
        app:layout_constraintBottom_toTopOf="@+id/guideline_play3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_state"
        app:layout_constraintTop_toTopOf="@+id/guideline_play2" />

    <ImageView
        android:id="@+id/image_view_shuffle"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@drawable/crossed_arrows"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_play4" />

    <ImageView
        android:id="@+id/image_view_loop"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_25"
        android:src="@drawable/replay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_play4" />

</android.support.constraint.ConstraintLayout>
